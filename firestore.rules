rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write media collection
    match /media/{document} {
      // Users must be authenticated to read or write media documents
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to manage other collections as needed
    match /testimonials/{document} {
      allow read: if true; // Public read access for testimonials
      allow write: if request.auth != null; // Authenticated write access
    }
    
    match /quotes/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /contacts/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Default rule - deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}